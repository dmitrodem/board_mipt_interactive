{
    "manifest_version": 2,
    "name": "MIPT Board Interactive",
    "version": "1.2",

    "description": "Expands messages by pressing plus sign",

    "content_scripts": [
        {
            "matches": [
                "*://zlo.rt.mipt.cc/*",
                "*://board.rt.mipt.cc/*"
            ],
            "js": ["board_mipt_interactive.js"]
        }
    ],

    "permissions": [
        "*://zlo.rt.mipt.cc/*",
        "*://board.rt.mipt.cc/*"
    ],

    "icons" : {
        "32" : "icons/favicon.ico"
    },

    "web_accessible_resources" : [
        "dark.css"
    ]

}
